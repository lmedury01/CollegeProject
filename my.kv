WindowManager:

    MainWindow:

    SecondWindow:

    NewUser:

    LoginSuccess:

    Include:

    Profile:

<MainWindow>:
    name: "main"
    uname:uname
    passw:passw

    GridLayout:
        cols:1

        GridLayout:
            cols:2
            size: root.width - 200, root.height - 200
            pos:100,100

            Label:
                text: "Username: "

            TextInput:
                id: uname
                multiline : False

            Label:
                text: " Password: "

            TextInput:
                id: passw
                multiline : False
                password: True

        Button:
            text:"Submit"
            on_release:
                root.validate()
                root.manager.transition.direction = "left"


        Button:
            text:"Don't have an account? Create One"
            on_release:
                app.root.current = "register"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    Button:
        text: "Registration/Sign up failed. Please try again."
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<LoginSuccess>
    name: "home"

    GridLayout:
        cols:1

        Button:
            text: "View Your CGPA"
            on_release:
                app.root.current = "profile"
                root.manager.transition.direction = "left"

        Button:
            text: "View due subjects"
            on_release:
                app.root.current = "pending"
                root.manager.transition.direction = "left"

        Button:
            text: "Payment"
            on_release:
                app.root.current = "payments"
                root.manager.transition.direction = "left"

        Button:
            text: "Change Password"
            on_release:
                app.root.current = "aquery"
                root.manager.transition.direction = "left"

        Button:
            text: "Logout"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"
<Payments>
    name: "payments"

    GridLayout:
        cols:1

        Button:
            text: "Pay College Fee"
            on_release:
                app.root.current = "collegefee"
                root.manager.transition.direction = "left"

        Button:
            text: "Pay Regular Exam Fee"
            on_release:
                app.root.current = "regularfee"
                root.manager.transition.direction = "left"

        Button:
            text: "Pay Supplementary Exam Fee"
            on_release:
                app.root.current = "supplementaryfee"
                root.manager.transition.direction = "left"

        Button:
            text: "Home"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "left"
<ChangePassword>:
    name: "change"
    existing:existing
    password: password
    repeatPassword: repeat


    GridLayout:
        cols:1

        GridLayout:
            cols:2


            Label:

                text: "Existing Password: "

            TextInput:

                id: existing
                multiline : False
                password: True

            Label:

                text: " New Password: "

            TextInput:
                id: password
                multiline : False
                password: True

            Label:

                text: " Repeat Password: "

            TextInput:
                id: repeat
                multiline : False
                password: True

        Button:
            pos_hint:{"x":0.2, "y": 0.05}
            size_hint:0.6,0.1
            text: "Change"
            on_release:
                root.modify()
                root.manager.transition.direction = "down"


