<Include>:
    name:"include"
    task:task
    deadline:deadline

    GridLayout:
        cols:1
        padding: 10
        spacing:10

        GridLayout:
            cols:2
            size: root.width*0.8,root.height*0.8
            Label:
                text: "Task: "

            TextInput:
                id:task

            Label:
                text: "Deadline: "

            TextInput:
                id: deadline

        Button:
            text:"Submit"
            root_default_height:40
            root_force_default:True
            width: 50
            on_release:
                root.set()
                root.manager.transition.direction = "left"

        Button:
            text:"Home"
            size: 100,100
            on_release:
                app.root.current="home"
                root.manager.transition.direction = "left"



<NewUser>:
